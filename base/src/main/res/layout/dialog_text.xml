<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_5dp"
    android:paddingTop="34.5dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:text="是否确认暂停招聘"
        android:textColor="@color/tv_fab"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dialog_view_line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="34.5dp"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

    <View
        android:id="@+id/dialog_view_line2"
        android:layout_width="0.5dp"
        android:layout_height="38.5dp"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_view_line1" />

    <TextView
        android:id="@+id/dialog_tv_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="取消"
        android:textSize="10sp"
        android:textColor="@color/tv_fab"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_view_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dialog_view_line2"
        app:layout_constraintTop_toTopOf="@+id/dialog_view_line2" />


    <TextView
        android:id="@+id/dialog_tv_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="确定"
        android:textSize="10sp"
        android:textColor="@color/tv_fab"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_view_line2"
        app:layout_constraintLeft_toRightOf="@+id/dialog_view_line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_view_line2" />

</androidx.constraintlayout.widget.ConstraintLayout>
